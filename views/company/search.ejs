<!DOCTYPE html>
<html>
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>
<script>
    function removeMessage() {
        localStorage.removeItem("message");
    }
</script>

<body style="background-color: #f4ffec;">
    <div class="card mt-2 mb-2x"
        style="min-height: 86.5% !important; scrollbar-width: none !important; margin-left: 2%; margin-right: 2%; background-color: #c5dfbe;">
        <div class="row text-dark table-container"
            style="margin-left: 0.5%; margin-bottom: 0.5%; scrollbar-width: none !important;">

            <div class="container">
                <h3>Modulo de compañía: Editar</h3>
                <form action="/companies/updateCompany/<%=company._id%>" method="post">
                    <div class="col-6">
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">No. Documento</label>
                            <input type="text" name="numero_documento" class="form-control"
                                value="<%=company.numero_documento%>" required />
                        </div>
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">Nombre</label>
                            <input type="text" name="nombre" class="form-control" value="<%=company.nombre%>"
                                required />
                        </div>
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">Tipo de compañía</label>
                            <input type="text" name="tipo" list="typecompany" class="form-control"
                                value="<%=company.tipo%>">
                            <datalist id="typecompany">
                                <option value="Industrial" class="form-control">
                                <option value="Comercial" class="form-control">
                                <option value="Hotelera" class="form-control">
                                <option value="Agricola" class="form-control">
                                <option value="Ganadera" class="form-control">
                            </datalist>
                        </div>
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">Aprobado por:</label>
                            <input type="text" name="aprobado_por" class="form-control"
                                value="<%=company.aprobado_por%>" required />
                        </div>
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">Fecha de Inicio:</label>
                            <input type="date" id="start" name="fecha_inicio" value="<%=company.fecha_inicio%>"
                                class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label for="exampleInputEmail1" class="form-label">Descripción:</label>
                            <input type="text" name="descripcion" class="form-control" value="<%=company.descripcion%>"
                                required />
                        </div>
                        <div class="btnContainer mb-4">
                            <td colspan="2"><button class="btn btn-success" onclick="removeMessage()"
                                    type="submit">Actualizar</button></td>
                            <button type="button" class="btn btn-danger">
                                <a href="/companies/showCompany" type="button">Cancelar</a>
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</body>

</html>