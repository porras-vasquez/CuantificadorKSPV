<!DOCTYPE html>
<html>
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>

<body style="background-color: #f4ffec;">
    <div class="container mt-5">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app" style="background-color: #beb39c;">
                    <div class="people-list ">
                        <div class="col-12 row mt-5">
                            <img style="margin-left: 4%;" src="/images/logov2.png" class="img">
                        </div>
                        <ul class="list-unstyled chat-list  mb-0">
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/createCompany" type="button" class="btn btn primary ">Agregar
                                    compañia</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/showCompany" type="button" class="btn btn primary ">Vista de
                                    compañía</a>
                            </ul>
                            <div class="col-12 mb-5"></div>
                        </ul>
                    </div>
                    <% if(typeof(message) !="undefined" ) { %>
                        <% if(message=="success" ) { %>
                            <script>
                                Swal.fire({
                                    position: 'center',
                                    icon: 'success',
                                    title: 'Exito al agregar la compañia',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(({ value }) => {
                                });
                            </script>
                            <% }else if(message=="error" ){ %>
                                <script>
                                    Swal.fire({
                                        position: 'center',
                                        icon: 'error',
                                        title: 'Error al agregar la compañia',
                                        showConfirmButton: false,
                                        timer: 1500
                                    }).then(({ value }) => {
                                    });
                                </script>
                                <% } %>
                                    <% } %>
                                        <div class="chat">
                                            <div
                                                style="background-color: #beb39c; margin-top: 4%; margin-bottom: 4%; padding-left: 6%;">
                                                <h1 class="title">Información de la compañía</h1>
                                                <form action="/companies/saveCompany" method="post" class="newUser">
                                                    <div class="col-6">
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1" class="form-label">No.
                                                                Documento</label>
                                                            <input type="text" name="numero_documento"
                                                                class="form-control"
                                                                placeholder="Ingrese el numero de documento" required />
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1"
                                                                class="form-label">Nombre</label>
                                                            <input type="text" name="nombre" class="form-control"
                                                                placeholder="Ingrese el nombre" required />
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1" class="form-label">Tipo de
                                                                compañía</label>
                                                            <input type="text" name="tipo" list="typecompany"
                                                                class="form-control"
                                                                placeholder="Ingrese el tipo de compañia">
                                                            <datalist id="typecompany">
                                                                <option value="Industrial" class="form-control">
                                                                <option value="Comercial" class="form-control">
                                                                <option value="Hotelera" class="form-control">
                                                                <option value="Agricola" class="form-control">
                                                                <option value="Ganadera" class="form-control">
                                                            </datalist>
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1" class="form-label">Aprobado
                                                                por:</label>
                                                            <input type="text" name="aprobado_por" class="form-control"
                                                                placeholder="Ingrese el nombre del aprobador"
                                                                required />
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1" class="form-label">Fecha
                                                                de inicio:</label>
                                                            <input type="date" id="start" name="fecha_inicio"
                                                                value="yyyy-mm-dd" class="form-control" required />
                                                        </div>
                                                        <div class="mb-2">
                                                            <label for="exampleInputEmail1"
                                                                class="form-label">Descripción:</label>
                                                            <input type="text" name="descripcion" class="form-control"
                                                                placeholder="Ingrese una descripción" required />
                                                        </div>
                                                        <div class="btnContainer mb-4">

                                                            <input type="submit" name="CompanyController"
                                                                class="btn btn-success" value="Guardar">
                                                            <button type="button" class="btn btn-danger">
                                                                <a href="/companies/showCompany" type="button">Cancelar</a>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>