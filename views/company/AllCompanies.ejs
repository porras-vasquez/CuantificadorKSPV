<html lang="en">
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>
<body style="background-color: #f4ffec;">
    <div class="container mt-5">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app" style="background-color: #eef7e1;">
                    <div class="people-list ">
                        <div class="col-12 row mt-5">
                            <img style="margin-left: 4%;" src="/images/logov2.png" class="img">
                        </div>
                        <ul class="list-unstyled chat-list  mb-0">
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/createCompany" type="button" class="btn btn primary ">Agregar
                                    compañia</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/showCompany" type="button" class="btn btn primary ">Vista de
                                    compañia</a>
                            </ul>
                            <div class="col-12 mb-5"></div>
                        </ul>
                    </div>
                    <div class="chat mbs">
                        <div class="container card-body col-3" style="margin-left: 3%; padding-bottom: 5%;">
                            <h3 class="mt-3">Compañias</h3>
                            <tbody style="background-color: rgb(243, 235, 224); font-size: 18px;">
                                <% companies.forEach((company)=>{ %>
                                    <div>
                                        <div class="card">
                                            <div class="card">
                                                <div class="card-header">
                                                    <%=company.tipo%>
                                                </div>
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%=company.nombre%>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%=company.descripcion%>
                                                    </p>
                                                </div>
                                                <button action="/companies/deleteCompany/<%=company._id%>" method="post"
                                                    type="danger " class="btn btn-danger"><i
                                                        class="material-icons">delete</i></button>
                                                <button type="link" class="btn btn-success edit btn"
                                                    onclick="window.location. href='/companies/searchCompany/<%=company._id%>'"><i
                                                        class="material-icons">menu</i></button>
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>




</html>