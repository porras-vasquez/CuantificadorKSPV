<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/Show.css" />
    <link type="text/html" href="/views/generalComponents/navbar.html" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>

<body style="background-color: #f4ffec;">
    <div class="container mt-5">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app" style="background-color: #eef7e1;">
                    <div class="people-list ">
                        <div class="col-12 row mt-5">
                            <img style="margin-left: 4%;" src="/images/logov2.png" class="img">
                        </div>
                        <ul class="list-unstyled chat-list  mb-0">
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/createCompany" type="button" class="btn btn primary ">Agregar
                                    compañia</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/companies/showCompany" type="button" class="btn btn primary ">Vista de
                                    compañia</a>
                            </ul>
                            <div class="col-12 mb-5"></div>
                        </ul>
                    </div>
                    <div class="chat mbs">
                        <div class="container card-body" style="margin-left: 3%; padding-bottom: 5%;">
                            <h3 class="mt-3">Compañias</h3>
                            <tbody style="background-color: rgb(243, 235, 224); font-size: 18px;">
                                <% companies.forEach((company)=>{ %>
                                    <div class="card" style="width: 18rem;;">
                                        <div class="card">
                                            <div class="card-header">
                                                <%=company.tipo%>
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%=company.nombre%>
                                                </h5>
                                                <p class="card-text">
                                                    <%=company.descripcion%>
                                                </p>
                                            </div>
                                            <form action="/companies/deleteCompany/<%=company._id%>" method="post">
                                                <button type="danger " class="btn btn-danger"><i
                                                        class="material-icons">delete</i></button>
                                            </form>
                                            <form>
                                                <button type="link" class="btn btn-success edit btn"
                                                    onclick="window.location. href=' /companies/searchCompany/<%=company._id%>'"><i
                                                        class="material-icons">menu</i></button>
                                            </form>
                                        </div>
                                    </div>
                                    <% }) %>
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>




</html>