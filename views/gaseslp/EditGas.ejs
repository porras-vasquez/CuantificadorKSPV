                </ul>
            </div>
        </div>
        <div class="row text-dark table-container"
            style="margin-left: 14%; margin-bottom: 0.5%; scrollbar-width: none !important;">
            <form action="/gaseslp/updateGases/<%=gaslp._id%>" method="post" class="row form">
                <h2 class="h2" style="margin-bottom: 1%;">Módulo de Gases LP: Editar</h2>
                <div style="display: flex;">
                    <div class="col-2">
                        <p class="p" type="Uso:"><input class="input" placeholder="Escriba el título" name="uso"
                                value="<%=gaslp.uso%>" required /></p>
                        <p class="p" type="Observación:"><input class="input" placeholder="Escriba el título"
                                name="observacion" value="<%=gaslp.observacion%>" required /></p>
                        <p class="p" type="Densidad:"><input class="input" placeholder="Escriba el título"
                                name="densidad" value="<%=gaslp.densidad%>" pattern="^[0-9]+\.?[0-9]*$"
                                oninvalid="this.setCustomValidity('Este campo es obligatorio, no se permite el uso de comas, caracteres especiales, espacios o letras')"
                                oninput="this.setCustomValidity('')" autocomplete="off" required /></p>
                        <p class="p" type="PCG:"><input class="input" placeholder="Escriba el título" name="pcg"
                                value="<%=gaslp.pcg%>" pattern="^[0-9]+\.?[0-9]*$"
                                oninvalid="this.setCustomValidity('Este campo es obligatorio, no se permite el uso de comas, caracteres especiales, espacios o letras')"
                                oninput="this.setCustomValidity('')" autocomplete="off" required /></p>
                        <p class="p" type="Factor de emisión:"><input class="input" placeholder="Escriba el factor"
                                name="factor" pattern="^[0-9]+\.?[0-9]*$" value="<%=gaslp.factor%>"
                                oninvalid="this.setCustomValidity('Este campo es obligatorio, no se permite el uso de comas, caracteres especiales, espacios o letras')"
                                oninput="this.setCustomValidity('')" autocomplete="off" required /></p>


                    </div>
                    <div class="col-2">
                        <p class="p" type="Datos emisión general">
                            <select style="padding-left: 10px; padding-bottom: 10px; margin-top: 10px;" name="gei"
                                aria-placeholder="GEI" aria-label="Default select example">
                                <option selected>
                                    <%=gaslp.gei%>
                                </option>
                                <option value="Kilogramo">Kilogramo</option>
                                <option value="Litro">Litro</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </p>
                        <p class="p" type="Unidad de medida:">
                            <select style="padding-left: 10px; padding-bottom: 10px; margin-top: 10px;" name="unidad"
                                aria-placeholder="Unidad de medida" aria-label="Default select example">
                                <option selected>
                                    <%=gaslp.unidad%>
                                </option>
                                <option value="Kilogramo">Kilogramo</option>
                                <option value="Litro">Litro</option>
                                <option value="Otro">Otro</option>
                            </select>
                        </p>
                    </div>
