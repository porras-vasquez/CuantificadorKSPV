<!DOCTYPE html>
<html lang="en">
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>

<body style="background-color: #f4ffec; height: 100vh !important;">
    <% if(typeof(message) !="undefined" ) { %>
        <% if(message=="success" ) { %>
            <script>
                if (!localStorage.getItem("message")) {
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: '¡Realizado exitosamente!',
                        showConfirmButton: false,
                        timer: 2000
                    });
                    localStorage.setItem("message", 1);
                }
            </script>
            <% }else if(message=="error" ){ %>
                <script>
                    if (!localStorage.getItem("message")) {
                        Swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: '¡Lo sentimos, ocurrió un error!',
                            showConfirmButton: false,
                            timer: 2000
                        });
                        localStorage.setItem("message", 1);
                    }                                
                </script>
                <% } %>
            <% } %>
                        <div class="card mt-2 mb-2x"
                            style="min-height: 86.5% !important; scrollbar-width: none !important; margin-left: 2%; margin-right: 2%; background-color: #c5dfbe;">
                            <div id="menu-container" class="menu-container">
                                <div id="menu" class="menu">
                                    <i id="expand" class="material-icons" style="font-size: 35px">menu_open</i>
                                </div>
                                <div class="flex-menu">
                                    <ul class="list-unstyled chat-list  mb-0">
                                        <ul class="list-group list-group-flush button flex-color">
                                            <a onclick="window.location. href='/electricities/electricity/<%=company%>'"
                                                type="button" class="btn btn primary ">Agregar reporte</a>
                                        </ul>
                                        <ul class="list-group list-group-flush button flex-color">
                                            <a href="/companies/createCompany" type="button"
                                                class="btn btn primary ">Agregar compañía</a>
                                        </ul>
                                        <ul class="list-group list-group-flush button flex-color">
                                            <a href="/companies/showCompany" type="button"
                                                class="btn btn primary ">Atrás</a>
                                        </ul>
                                    </ul>
                                </div>
                            </div>
                            <div class="row text-dark table-responsive table-container" style="margin-left: 0.5%; margin-bottom: 0.5%; scrollbar-width: none !important;">
                                <!--Table-->
                                <table class="table-bordered" style="background-color: white;">
                                    <!--Table head-->
                                    <thead style="background-color: rgba(26,145,125,255);">
                                        <tr class="text-center">
                                            <th scope="col text-whitex">Título</th>
                                            <th scope="col text-whitex">Fuente de reporte</th>
                                            <th scope="col text-whitex">Unidad de medida</th>
                                            <th scope="col text-whitex">Última actualización</th>
                                            <th scope="col text-whitex">Observación</th>
                                            <th scope="col text-whitex">Acción</th>
                                        </tr>
                                    </thead>
                                    <!--Table head-->
                                    <!--Table body-->
                                    <tbody>
                                        <% electricities.forEach((electricity)=>{ %>
                                            <tr class="text-center tr">
                                                <td>
                                                    <div>
                                                        <%=electricity.titulo%>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <%=electricity.fuente_reporte%>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <%=electricity.unidad_medida%>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <%=electricity.ultima_update%>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <%=electricity.observacion%>
                                                    </div>    
                                                </td>
                                                <td>
                                                    <div>
                                                        <form style="font-size: 18px;"
                                                            action="/electricities/deleteElectricity/<%=electricity._id%>/<%=electricity.company%>"
                                                            method="post">
                                                            <button type="danger" class="btn btn-danger">
                                                                <i class="material-icons">delete</i>
                                                            </button>
                                                        </form>
                                                        <button type="link" class="btn btn-success edit btn-company"
                                                            onclick="window.location. href='/electricities/searchElectricity/<%=electricity._id%>'">
                                                            <i class="material-icons">edit</i>
                                                        </button>
                                                        <button type="link" class="btn btn-warning edit btn btn-company"
                                                            title="Agregar medidor">
                                                            <a class="material-icons"
                                                                onclick="window.location. href='/electricities/newMeter/<%=electricity._id%>/<%=electricity.company%>'">
                                                                speed
                                                            </a>
                                                        </button>
                                                        <button type="link" class="btn btn-warning edit btn btn-company"
                                                            title="Ver medidores">
                                                            <a class="material-icons"
                                                                onclick="window.location. href='/electricities/meters/<%=electricity._id%>'">
                                                                view_module
                                                            </a>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                    <!--Table body-->
                                </table>
                                <!--Table-->
                            </div>
                        </div>
</body>

</html>