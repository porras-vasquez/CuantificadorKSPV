                        <a href="/companies/showCompany" type="button" class="btn btn primary ">Atrás</a>
                    </ul>
                </ul>
            </div>
        </div>
        <div class="row table-container"
            style="margin-left: 3.5%; margin-bottom: 0.5%; scrollbar-width: none !important;">
            <form action="/fuelsAndOil/updateFuelsAndOil/<%=fuelsAndOil._id%>" method="post" class="form row "
                style="margin-left: 12%;">
                <h2 class="h2">Módulo de Combustibles y Lubricantes: Editar</h2>
                <div style="display: flex;">
                    <div class="col-2">
                        <p class="p" type="Combustible/Lubricante:">
                            <select style="padding-left: 10px; padding-bottom: 10px; margin-top: 10px;"
                                name="combustible" aria-placeholder="Combustible" aria-label="Default select example">
                                <option selected>
                                    <%=fuelsAndOil.combustible%>
                                </option>
                                <option value="Gasolina">Gasolina</option>
                                <option value="Diésel">Diésel</option>
                                <option value="Aceite 2t/4t">Aceite 2t/4t</option>
                            </select>
                        </p>
                        <p class="p" type="Datos emisión general:">
                            <select style="padding-left: 10px; padding-bottom: 10px; margin-top: 10px;" name="gei"
                                aria-placeholder="GEI" aria-label="Default select example">
                                <option selected>
                                    <%=fuelsAndOil.gei%>
                                </option>
                                <option value="CO2">CO2</option>
                                <option value="CH4">CH4</option>
                                <option value="N2O">N2O</option>
                            </select>
                        </p>
                        <p class="p" type="pcg:"><input class="input" placeholder="Escriba el pcg" name="pcg"
                                pattern="^[0-9]+\.?[0-9]*$"
                                oninvalid="this.setCustomValidity('Este campo es obligatorio, no se permite el uso de comas, caracteres especiales, espacios o letras')"
                                oninput="this.setCustomValidity('')" autocomplete="off" value="<%=fuelsAndOil.pcg%>"
                                required="true" />
                        </p>
                        <p class="p" type="Factor de emisión:"><input class="input" placeholder="Escriba el factor"
                                name="factor" pattern="^[0-9]+\.?[0-9]*$" value="<%=fuelsAndOil.factor%>"
                                oninvalid="this.setCustomValidity('Este campo es obligatorio, no se permite el uso de comas, caracteres especiales, espacios o letras')"
                                oninput="this.setCustomValidity('')" autocomplete="off" required />
                        </p>
                    </div>
                    <div class=" col-4 row" style="margin-left: 6%;">
                        <h2 class="mt-2">
                            Consumo de litros por mes
                        </h2>
                        <div class="col-md-3 mb-1 text-center">
                            <label for="exampleInputEmail1" class="form-label text p2">Enero</label>
                            <input type="text" pattern="^[0-9]+\.?[0-9]*$"
                                oninvalid="this.setCustomValidity('No se permite el uso de comas, caracteres especiales, espacios o letras.')"
                                oninput="this.setCustomValidity('')" autocomplete="off" name="enero"
                                class="textarea form-control" value="<%=fuelsAndOil.enero%>" required />
                        </div>
                        <div class="col-md-3 mb-1 text-center">
                            <label for="exampleInputEmail1" class="form-label p2">Febrero</label>
