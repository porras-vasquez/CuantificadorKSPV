                        <td class="text-center"><%=agosto%></td>
                        <td class="text-center"><%=septiembre%></td>
                        <td class="text-center"><%=octubre%></td>
                        <td class="text-center"><%=noviembre%></td>
                        <td class="text-center"><%=diciembre%></td>
                            <td>
                                <div class="text-center">
                                    <%=sumatoria%>
                                </div>
                            </td>

                </tbody>
            </table>

        </div>
    </div>

