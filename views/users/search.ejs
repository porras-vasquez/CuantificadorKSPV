<!DOCTYPE html>
<html>
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>

<body style="background-color: #f4ffec;">
    <div class="container mt-5" style="padding-bottom: 20%;">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app" style="background-color: #beb39c;">
                    <div class="people-list">
                        <div class="col-12 row mt-5">
                            <img style="margin-left: 4%;" src="/images/logov2.png" class="img">
                        </div>
                        <ul class="list-unstyled chat-list  mb-0">
                            <ul class="list-group list-group-flush button">
                                <a href="/users/search" type="button" class="btn btn primary ">Editar perfil</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/users/create" type="button" class="btn btn primary ">Agregar usuario</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/users/show" type="button" class="btn btn primary ">Vista de usuarios</a>
                            </ul>
                            <div class="col-12 mb-5"></div>
                        </ul>
                    </div>
                    <% if(typeof(message) !="undefined" ) { %>
                        <% if(message=="success" ) { %>
                            <script>
                                Swal.fire({
                                    position: 'center',
                                    icon: 'success',
                                    title: 'Exito al editar',
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(({ value }) => {
                                });
                            </script>
                            <% }else if(message=="error" ){ %>
                                <script>
                                    Swal.fire({
                                        position: 'center',
                                        icon: 'error',
                                        title: 'Error al editar',
                                        showConfirmButton: false,
                                        timer: 1500
                                    }).then(({ value }) => {
                                    });
                                </script>
                                <% } %>
                                    <% } %>
                                        <div class="chat" style="padding-bottom: 20%; ">
                                            <div style="margin-right: 20%;">
                                                <div class="container">
                                                    <h3>Editar usuario</h3>
                                                    <form action="/users/update/<%=user._id%>" method="post">
                                                        <table>
                                                            <tbody>
                                                                <tr>
                                                                    <td>Nombre: </td>
                                                                    <td><input class="form-control" type="text"
                                                                            name="username"
                                                                            value="<%=user.username%>" />
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>Correo: </td>
                                                                    <td><input class="form-control" type="text"
                                                                            name="email" value="<%=user.email%>" /></td>
                                                                </tr>
                                                                <tr>
                                                                    <td colspan="2"><button class="btn btn-success"
                                                                            type="submit">Actualizar</button></td>

                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>