<!DOCTYPE html>
<html>
<header>
    <!--ZONA DEL NAVBAR-->
    <%- include('../navbar'); -%>
</header>
<script>
    function removeMessage(){
        localStorage.removeItem("message");
    }
</script>
<body style="background-color: #f4ffec;">
    <div class="container mt-5" style="padding-bottom: 20%;">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app" style="background-color: #c5dfbe;">
                    <div class="people-list">
                        <div class="col-12 row mt-5">
                            <img style="margin-left: 4%;" src="/images/logov2.png" class="img">
                        </div>
                        <ul class="list-unstyled chat-list  mb-0">
                            <ul class="list-group list-group-flush button">
                                <a href="/users/create" type="button" class="btn btn primary ">Agregar usuario</a>
                            </ul>
                            <ul class="list-group list-group-flush button">
                                <a href="/users/show" type="button" class="btn btn primary ">Vista de usuarios</a>
                            </ul>
                            <div class="col-12 mb-5"></div>
                        </ul>
                    </div>
                    <div class="chat" style="padding-bottom: 20%; ">
                        <div style="margin-right: 20%;">
                            <div class="container">
                                <h3>Editar usuario</h3>
                                <form action="/users/update/<%=user._id%>" method="post">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>Nombre: </td>
                                                <td><input class="form-control" type="text" name="username"
                                                        value="<%=user.username%>" required/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Correo: </td>
                                                <td><input class="form-control" type="text" name="email"
                                                        value="<%=user.email%>" required /></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2"><button onclick="removeMessage()" class="btn btn-success"
                                                        type="submit">Actualizar</button>
                                                        <button type="button" class="btn btn-danger">
                                                            <a href="/users/show" type="button" >Cancelar</a>
                                                        </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>